<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="confirmation_frame">
		<widget class="SwatForm" id="confirmation_form">
			<widget class="SwatDisplayableContainer" id="confirmation_container">
				<widget class="SwatContentBlock" id="confirmation_message" />
				<widget class="SwatFormField">
					<property name="title" translatable="yes">apply changes on</property>
					<property name="note" translatable="yes">Please note that queued attribute updates are checked every 5 minutes.</property>
					<widget class="SwatDateEntry" id="action_date">
						<property name="display_parts" type="constant">YEAR|MONTH|DAY|TIME|CALENDAR</property>
						<property name="required" type="boolean">true</property>
					</widget>
				</widget>
			</widget>
			<widget class="AdminNote" id="note">
				<property name="visible" type="boolean">false</property>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="yes_button">
					<property name="stock_id">apply</property>
				</widget>
				<widget class="SwatButton" id="no_button">
					<property name="stock_id">cancel</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
