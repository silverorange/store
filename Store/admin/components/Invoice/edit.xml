<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Invoice</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Locale</property>
				<widget class="SwatFlydown" id="locale" />
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Comments</property>
				<widget class="SwatTextarea" id="comments" />
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Shipping</property>
				<property name="note" translatable="yes">Optional: if entered, this value will override the calculated shipping amount</property>
				<widget class="SwatMoneyEntry" id="shipping_total">
					<property name="locale"></property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Taxes</property>
				<property name="note" translatable="yes">Optional: if entered, this value will override the tax amount</property>
				<widget class="SwatMoneyEntry" id="tax_total">
					<property name="locale"></property>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button" />
				<widget class="SwatButton" id="submit_continue_button">
					<property name="title" translatable="yes">Create &amp; Manage Items</property>
					<property name="visible" type="boolean">false</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
