<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<!-- {{{ Invoice Details -->
	<widget class="SwatFrame" id="details_frame">
		<widget class="SwatToolbar" id="details_toolbar">
			<widget class="SwatToolLink">
				<property name="title" translatable="yes">Edit Invoice</property>
				<property name="link">Invoice/Edit?id=%s</property>
				<property name="stock_id">edit</property>
			</widget>
			<widget class="SwatToolLink">
				<property name="title" translatable="yes">Send Email Notification</property>
				<property name="link">Invoice/EmailNotification?id=%s</property>
				<property name="stock_id">email</property>
			</widget>
			<widget class="SwatToolLink">
				<property name="title" translatable="yes">Delete Invoice</property>
				<property name="link">Invoice/Delete?id=%s</property>
				<property name="stock_id">delete</property>
			</widget>
		</widget>
		<widget class="SwatDetailsView" id="details_view">
			<object class="SwatDetailsViewVerticalField">
				<property name="title" translatable="yes">Comments</property>
				<object class="SwatNullTextCellRenderer">
					<property name="text" type="data">comments</property>
				</object>
			</object>
		</widget>
		<!-- }}} -->
		<!-- {{{ Items -->
		<widget class="SwatFrame" id="items_frame">
			<property name="title" translatable="yes">Items</property>
			<widget class="SwatToolbar" id="items_toolbar">
				<widget class="SwatToolLink">
					<property name="title" translatable="yes">New Item</property>
					<property name="link">Invoice/ItemEdit?invoice=%s</property>
					<property name="stock_id">create</property>
				</widget>
				<widget class="SwatToolLink">
					<property name="title" translatable="yes">Order Items</property>
					<property name="link">Invoice/ItemOrder?id=%s</property>
				</widget>
			</widget>
			<widget class="SwatForm" id="items_form">
				<widget class="SwatTableView" id="items_view">
					<object class="SwatTableViewCheckboxColumn" id="checkbox">
						<object class="SwatCheckboxCellRenderer" id="items">
							<property name="value" type="data">id</property>
						</object>
						<object class="SwatRemoveInputCell" />
					</object>
					<object class="SwatTableViewColumn">
						<object class="SwatImageLinkCellRenderer">
							<property name="image">packages/admin/images/admin-edit.png</property>
							<property name="width" type="integer">22</property>
							<property name="height" type="integer">22</property>
							<property name="title" translatable="yes">Edit Item</property>
							<property name="link">Invoice/ItemEdit?id=%s</property>
							<property name="link_value" type="data">id</property>
						</object>
					</object>
					<object class="AdminTableViewOrderableColumn" id="sku">
						<property name="title" translatable="yes">SKU</property>
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">sku</property>
						</object>
						<object class="SwatInputCell">
							<widget class="SwatEntry" id="input_sku">
								<property name="size" type="integer">7</property>
							</widget>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="description">
						<property name="title" translatable="yes">Description</property>
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">description</property>
						</object>
						<object class="SwatInputCell">
							<widget class="SwatEntry" id="input_description">
								<property name="size" type="integer">20</property>
							</widget>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="price">
						<property name="title" translatable="yes">Price</property>
						<object class="SwatMoneyCellRenderer">
							<property name="value" type="data">price</property>
						</object>
						<object class="SwatInputCell">
							<widget class="SwatMoneyEntry" id="input_price">
								<property name="size" type="integer">5</property>
								<property name="required" type="boolean">true</property>
							</widget>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="quantity">
						<property name="title" translatable="yes">Quantity</property>
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">quantity</property>
						</object>
						<object class="SwatInputCell">
							<widget class="SwatIntegerEntry" id="input_quantity">
								<property name="size" type="integer">3</property>
								<property name="required" type="boolean">true</property>
							</widget>
						</object>
					</object>
					<object class="SwatTableViewColumn" id="total">
						<property name="title" translatable="yes">Total</property>
						<object class="SwatMoneyCellRenderer">
							<property name="value" type="data">total</property>
						</object>
					</object>
					<object class="SwatTableViewInputRow" id="input_row">
						<property name="number" type="integer">0</property>
					</object>
					<object class="StoreInvoiceTotalRow" id="subtotal">
						<property name="title" translatable="yes">Subtotal</property>
					</object>
					<object class="StoreInvoiceTotalRow" id="shipping">
						<property name="title" translatable="yes">Shipping</property>
					</object>
					<object class="StoreInvoiceTotalRow" id="tax">
						<property name="title" translatable="yes">Tax</property>
					</object>
					<object class="StoreInvoiceTotalRow" id="total">
						<property name="title" translatable="yes">Total</property>
					</object>
				</widget>
				<widget class="SwatActions" id="index_actions">
					<property name="show_blank" type="boolean">false</property>
					<widget class="SwatActionItem" id="add">
						<property name="title" translatable="yes">add new items</property>
					</widget>
					<widget class="SwatActionItemDivider" />
					<widget class="SwatActionItem" id="delete">
						<property name="title" translatable="yes">deleteâ€¦</property>
					</widget>
				</widget>
			</widget>
		</widget>
		<!-- }}} -->
	</widget>
</swatml>
