<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatFrame" id="edit_frame">
		<property name="title" translatable="yes">Item Group</property>
		<widget class="SwatForm" id="edit_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Group Title</property>
				<widget class="SwatEntry" id="title">
					<property name="required" type="boolean">true</property>
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFrame">
				<property name="title" translatable="yes">Items in this Group</property>
				<widget class="SwatTableView" id="items_view">
					<object class="SwatTableViewColumn">
						<property name="title" translatable="yes">Item No.</property>
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">sku</property>
						</object>
					</object>
					<object class="SwatTableViewColumn">
						<property name="title" translatable="yes">Description</property>
						<object class="SwatTextCellRenderer">
							<property name="text" type="data">description</property>
						</object>
					</object>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton" id="submit_button" />
			</widget>
		</widget>
	</widget>
</swatml>
