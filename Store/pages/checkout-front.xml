<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="message_display" />
	<widget class="SwatDisplayableContainer" id="new_customers_frame">
		<widget class="SwatFrame">
			<property name="title" translatable="yes">New Customers</property>
			<widget class="SwatForm" id="create_account_form">
				<widget class="SwatContentBlock" id="account_info">
					<property name="content" translatable="yes"><![CDATA[<p>Creating an account will make it quicker and easier to order again when you return.</p>]]></property>
					<property name="content_type">text/xml</property>
				</widget>
				<widget class="SwatFormField">
					<widget class="SwatButton" id="create_account_button">
						<property name="title" translatable="yes">Create a New Account</property>
					</widget>
				</widget>
			</widget>
		</widget>
		<widget class="SwatForm" id="just_place_form">
			<widget class="SwatContentBlock">
				<property name="content" translatable="yes"><![CDATA[<p>If you would rather not create an account, you can simply checkout as a guest.</p>]]></property>
				<property name="content_type">text/xml</property>
			</widget>
			<widget class="SwatFormField">
				<widget class="SwatButton" id="checkout_as_guest_button">
					<property name="title" translatable="yes">Checkout as a Guest</property>
					<property name="classes[]">compact-button</property>
				</widget>
			</widget>
		</widget>
	</widget>
	<widget class="SwatFrame" id="login_frame">
		<property name="title" translatable="yes">Returning Customers</property>
		<widget class="SwatContentBlock" id="returning_customer_info">
			<property name="content" translatable="yes"><![CDATA[<p>If you have created an account before on our website, login here to checkout.</p>]]></property>
			<property name="content_type">text/xml</property>
		</widget>
		<widget class="SwatForm" id="login_form">
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Email Address</property>
				<widget class="SwatEmailEntry" id="email_address">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField">
				<property name="title" translatable="yes">Password</property>
				<widget class="SwatPasswordEntry" id="password">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFooterFormField">
				<widget class="SwatButton">
					<property name="title" translatable="yes">Login</property>
				</widget>
				<widget class="SwatContentBlock">
					<property name="content" translatable="yes"><![CDATA[<a href="account/forgotpassword">Forgot your password?</a>]]></property>
					<property name="content_type">text/xml</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
