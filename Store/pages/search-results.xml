<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="SwatMessageDisplay" id="results_message" />
	<widget class="SwatFrame" id="article_results_frame">
		<property name="title" translatable="yes">Article Search Results</property>
		<property name="visible" type="boolean">false</property>
		<widget class="SwatContentBlock" id="article_results">
			<property name="content_type">text/xml</property>
		</widget>
		<widget class="SiteSearchPagination" id="article_pager">
			<property name="page_size" type="integer">10</property>
			<property name="unset_get_vars[]">locale</property>
			<property name="type">article</property>
		</widget>
	</widget>
	<widget class="SwatFrame" id="category_results_frame">
		<property name="title" translatable="yes">Category Search Results</property>
		<property name="visible" type="boolean">false</property>
		<widget class="SwatContentBlock" id="category_results">
			<property name="content_type">text/xml</property>
		</widget>
	</widget>
	<widget class="SwatFrame" id="product_results_frame">
		<property name="title" translatable="yes">Product Search Results</property>
		<property name="visible" type="boolean">false</property>
		<widget class="SwatContentBlock" id="product_results">
			<property name="content_type">text/xml</property>
		</widget>
		<widget class="SiteSearchPagination" id="product_pager">
			<property name="page_size" type="integer">10</property>
			<property name="unset_get_vars[]">locale</property>
			<property name="type">product</property>
		</widget>
	</widget>
</swatml>
