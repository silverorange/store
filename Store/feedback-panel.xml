<?xml version="1.0" standalone="no"?>
<!DOCTYPE swatml SYSTEM "http://swat.silverorange.com/swatml1.dtd">
<swatml>
	<widget class="StoreFeedbackForm" id="feedback_form">
		<property name="action">feedback</property>
		<property name="classes[]">clearfix</property>
		<widget class="SwatDisplayableContainer">
			<widget class="SwatFormField" id="email_field">
				<property name="title" translatable="yes">Email</property>
				<widget class="SwatEmailEntry" id="email">
					<property name="maxlength" type="integer">255</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="bodytext_field">
				<property name="title" translatable="yes">Feedback</property>
				<property name="required" type="boolean">true</property>
				<widget class="SwatTextarea" id="bodytext">
					<property name="rows" type="integer">6</property>
					<property name="cols" type="integer">60</property>
				</widget>
			</widget>
			<widget class="SwatFormField" id="submit_button_field">
				<widget class="SwatButton" id="submit">
					<property name="title" translatable="yes">Send</property>
				</widget>
			</widget>
		</widget>
	</widget>
</swatml>
